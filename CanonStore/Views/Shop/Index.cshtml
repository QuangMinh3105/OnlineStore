@using CanonStore.Models
@model List<CanonStore.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_shopLayout.cshtml";
    db_CanonStoreEntities ctx = new db_CanonStoreEntities();
}

<!-- shop section -->
<div class="hero_area">
    <div class="hero_social">
        <a href="">
            <i class="fa fa-facebook" aria-hidden="true"></i>
        </a>
        <a href="">
            <i class="fa fa-twitter" aria-hidden="true"></i>
        </a>
        <a href="">
            <i class="fa fa-linkedin" aria-hidden="true"></i>
        </a>
        <a href="">
            <i class="fa fa-instagram" aria-hidden="true"></i>
        </a>
    </div>
    <!-- header section strats -->
    <!-- end header section -->
    <!-- slider section -->
    <section class="slider_section ">
        <div id="customCarousel1" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container-fluid ">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-box">
                                    <h1>
                                        Camera
                                    </h1>
                                    <p>
                                        Canon DSLR cameras combine a large CMOS (APS-C or full-frame) sensor with an advanced image processor to capture a range of high-quality shots. Compose photos and videos with an optical viewfinder, capture moments with fast frame rates and experience outstanding autofocus, steadying image stabilization, high resolution 4K and Full HD video and more with our full range of DSLR cameras.
                                    </p>
                                    <div class="btn-box">
                                        <a href="~/Shop/Contact" class="btn1">
                                            Contact Us
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="img-box ">
                                    <img src="~/Content/images/EOS_R3.png" style="width:80%;" alt="" ;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item ">
                    <div class="container-fluid ">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-box">
                                    <h1>
                                        Lens
                                    </h1>
                                    <p>

                                        Redefining the pinnacle of optical technology.
                                    </p>
                                    <div class="btn-box">
                                        <a href="~/Shop/Contact" class="btn1">
                                            Contact Us
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="img-box">
                                    <img src="~/Content/images/EF 16 35mm f4.png" style="width:80%;" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item ">
                    <div class="container-fluid ">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-box">
                                    <h1>
                                        Compact
                                    </h1>
                                    <p>
                                        These cameras pack powerful features and impressive picture quality into comfortable and easy-to-use cameras. Lightweight and even pocket-sized in some instances, these compact models deliver exceptional image quality and control. Whichever compact camera you choose, whether G Series, SX Series, IVY or ELPH, you’ll capture quality results.
                                    </p>
                                    <div class="btn-box">
                                        <a href="~/Shop/Contact" class="btn1">
                                            Contact Us
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="img-box">
                                    <img src="~/Content/images/PowerShot_G7_X_Mark3.png" style="width:80%;" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <ol class="carousel-indicators">
                <li data-target="#customCarousel1" data-slide-to="0" class="active"></li>
                <li data-target="#customCarousel1" data-slide-to="1"></li>
                <li data-target="#customCarousel1" data-slide-to="2"></li>
            </ol>
        </div>

    </section>
    <!-- end slider section -->
</div>

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Top Sale
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-xl-3">
                    <div class="box">
                        <a href="~/Shop/ProductDetails/@item.Id_product">
                            <div class="img-box">
                                <img src="~/Content/images/@item.Image" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @item.Name
                                    @*</h6>
                                        <h6>
                                            Price:*@
                                    <br />
                                    <span>
                                        $ @item.Price
                                    </span>
                                </h6>
                            </div>
                            <div class="new">
                                <span>
                                    @{ try
                                        {
                                            foreach (var i in ctx.proc_AVG_star_product((int?)item.Id_product))
                                            {
                                                @i.AVG_Star.Value.ToString("#.#") <i class="fa fa-star" aria-hidden="true"></i>
                                            }
                                        }
                                        catch
                                        {
                                            <small>
                                                0 <i class="fa fa-star" aria-hidden="true"></i>
                                            </small>
                                        }
                                    }

                                </span>
                            </div>
                        </a>
                    </div>
                </div>
            }


        </div>
        <div class="btn-box">
            <a href="~/Shop/Products">
                View All
            </a>
        </div>
    </div>
</section>

<!-- end shop section -->
<!-- about section -->

<section class="about_section layout_padding">
    <div class="container  ">
        <div class="row">
            <div class="col-md-6 col-lg-5 ">
                <div class="img-box">
                    <img src="~/Content/images/about-img.png" alt="">
                </div>
            </div>
            <div class="col-md-6 col-lg-7">
                <div class="detail-box">
                    <div class="heading_container">
                        <h2>
                            About Us
                        </h2>
                    </div>
                    
                    <p>
                        We’re a leading technology company, founded in 1937, and we’re dedicated to helping people reimagine and push the boundaries of what is possible through imaging.
                    </p>
                    <p>
                        Our continuous innovation has kept us at the forefront of imaging excellence throughout our 80-year history which has enabled us to develop industry-leading technology supporting future demands of photographers, videographers, office workers, professional printers, medical imaging experts and more.
                    </p>

                    
                    <a href="/Shop/About">
                        Read More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end about section -->
<!-- feature section -->
<!-- end feature section -->
<!-- contact section -->

<section class="contact_section m-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <div class="heading_container">
                        <h2>
                            Contact Us
                        </h2>
                    </div>
                    <form action="">
                        <div>
                            <input type="text" placeholder="Full Name " />
                        </div>
                        <div>
                            <input type="email" placeholder="Email" />
                        </div>
                        <div>
                            <input type="text" placeholder="Phone number" />
                        </div>
                        <div>
                            <input type="text" class="message-box" placeholder="Message" />
                        </div>
                        <div class="d-flex ">
                            <button>
                                SEND
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/Content/images/contact-img.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end contact section -->
