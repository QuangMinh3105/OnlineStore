@using CanonStore.Models
@model CanonStore.Models.Customer
@{
    ViewBag.Title = "AboutCustomer";
    Layout = "~/Views/Shared/_shopLayout.cshtml";
    db_CanonStoreEntities ctx = new db_CanonStoreEntities();
}

<style>
    .padding {
        padding: 2rem !important;
        display: flex;
        justify-content: center;
    }

    .user-card-full {
        overflow: hidden
    }

    .card {
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 20px 0 rgba(69, 90, 100, 0.08);
        box-shadow: 0 1px 20px 0 rgba(69, 90, 100, 0.08);
        border: none;
        margin-bottom: 30px
    }

    .m-r-0 {
        margin-right: 0px
    }

    .m-l-0 {
        margin-left: 0px
    }

    .user-card-full .user-profile {
        border-radius: 5px 0 0 5px
    }

    .bg-c-lite-green {
        background: -webkit-gradient(linear, left top, right top, from(#f29263), to(#ee5a6f));
        background: linear-gradient(to right, #ee5a6f, #f29263)
    }

    .user-profile {
        padding: 75px 0
    }

    .card-block {
        padding: 1.25rem
    }

    .m-b-25 {
        text-align: center;
    }

    .img-radius {
        border-radius: 5px
    }

    h6 {
        font-size: 14px
    }

    .card .card-block p {
        line-height: 25px
    }



    .card-block {
        padding: 1.25rem
    }

    .b-b-default {
        border-bottom: 1px solid #e0e0e0
    }

    .m-b-20 {
        margin-bottom: 20px
    }

    .p-b-5 {
        padding-bottom: 5px !important
    }

    .card .card-block p {
        line-height: 25px
    }

    .m-b-10 {
        margin-bottom: 10px
    }

    .text-muted {
        color: black !important
    }

    .b-b-default {
        border-bottom: 1px solid #e0e0e0
    }

    .f-w-600 {
        font-weight: 600
    }

    .m-b-20 {
        margin-bottom: 20px
    }

    .m-t-40 {
        margin-top: 20px
    }

    .p-b-5 {
        padding-bottom: 5px !important
    }

    .m-b-10 {
        margin-bottom: 10px
    }

    .m-t-40 {
        margin-top: 20px
    }

    .user-card-full .social-link li {
        display: inline-block
    }

        .user-card-full .social-link li a {
            font-size: 20px;
            margin: 0 10px 0 0;
            -webkit-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out
        }

    .table_contain {
        display: flex;
        margin: 20px 0px;
    }

    table {
        width: 100%;
        justify-content: center
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    .main {
        margin: 50px 0px;
    }

    .com_btn {
        width: 200px;
        text-align: center;
        display: inline-block;
        padding: 10px 55px;
        background-color: #f0d43a;
        color: #ffffff;
        border-radius: 5px;
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
        border: 1px solid #f0d43a;
        margin-top: 15px;
        display:block;
        justify-content:center;
    }
        .com_btn:hover {
            transition: all 0.3s;
            background-color: #d5b810;
            color: #ffffff;
        }

</style>

<div class="main" style="min-height:50vh;">
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div style="max-width: 100%; flex: 0%" class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">

                                    <div class="m-b-25"> <img src="~/Content/images/@Model.Image" style=" height: 100px; " class="img-radius" alt="User-Profile-Image"> </div>
                                    <br />
                                    <h6 class="f-w-600">@Model.Name</h6><br />

                                    <a href="~/Shop/CustomerEdit/@Model.Id" style="color:white; ">
                                        Edit
                                    </a>
                                    <br />
                                    <br />
                                    <br />

                                    <a href="~/Shop/Logout" style="color:white; ">
                                        Log Out
                                    </a>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Address</p>
                                            <h6 class="text-muted f-w-400">@Model.Address</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Date of Birth</p>
                                            <h6 class="text-muted f-w-400">@Model.DayOfBirth.Value.ToString("dd/MM/yyy")</h6>
                                        </div>
                                    </div>
                                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Projects</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Email</p>
                                            <h6 class="text-muted f-w-400">@Model.Email</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Phone</p>
                                            <h6 class="text-muted f-w-400">@Model.Phone</h6>
                                        </div>
                                    </div>

                                    <div style="margin-top: 50px">
                                        <div class="table_contain">
                                            <table>
                                                <thead>
                                                    <tr>

                                                        <th scope="col">#</th>
                                                        <th scope="col">Status</th>
                                                        <th scope="col">Total</th>
                                                        <th scope="col">Detail</th>

                                                        <th scope="col">Reviews</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in ViewBag.cusBills)
                                                    {
                                                        <tr>

                                                            <td>@item.IdBill</td>

                                                            @{
                                                                int id = item.Status;
                                                                Bill_Status bill_Status = ctx.Bill_Status.Where(s => s.IdStatus == id).FirstOrDefault();
                                                                <td>
                                                                    @item.Date_Created.ToString("dd/MM/yyyy")<br />
                                                                    @bill_Status.NameStatus
                                                                </td>
                                                            }
                                                            <td>$ @item.Total.ToString("#,##0.00")</td>

                                                            <td>


                                                                @using (Html.BeginForm("ExportPDFDetail", "Bills", FormMethod.Post, new { target = "_blank" }))
                                                                {
                                                                    @Html.Hidden("IdBill", (string)item.IdBill, new { @class = "form-control" })
                                                                    <input type="submit" value="PDF" style="font-size: 10px;" formtarget="_blank" />
                                                                }
                                                            </td>
                                                            @{
                                                                string bi = item.IdBill;
                                                                List<Bill_details> bill_Details = ctx.Bill_details.Where(bd => bd.IdBill == bi).ToList();
                                                                List<Comment> comments = ctx.Comments.Where(c => c.Id_Bill == bi).ToList();
                                                                if (bill_Details.Count == comments.Count)
                                                                {
                                                                    <td>
                                                                        <i class="fa fa-check-circle" aria-hidden="true"></i> Have evaluated.
                                                                    </td>
                                                                }
                                                                else
                                                                {
                                                                    int t = bill_Details.Count - comments.Count;
                                                                    <td>
                                                                        There are @t products that <br>
                                                                        have not been rated yet
                                                                        <a href="~/Shop/CustomerBillDetail/@item.IdBill" class="com_btn">Comment</a>
                                                                    </td>
                                                                }
                                                            }

                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>