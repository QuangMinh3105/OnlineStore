@model CanonStore.Models.Employee
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th {
        padding: 5px;
        text-align: left;
        font-size: 20px;
        width: 200px;
    }

    td {
        padding: 5px;
        text-align: center;
        font-size: 20px;
    }

    .main {
        height: 100vh;
    }

    .btn_Delete {
        margin: 30px;
        color: rgb(248 172 172);
        width: 50px;
        justify-content: center;
        font-size: 50px;
        display: flex;
        align-content: center;
    }

        .btn_Delete:hover {
            color: rgb(255 0 0);
        }
</style>
<div class="main">

    <h2>Delete Emloyee</h2>




    <table style="width:50%">
        <tr>
            <th>Name:</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Telephone:</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Adress</th>
            <td>@Model.Address</td>
        </tr>
    </table>


    <div>
        <h3 style="color:red;">Do you want to delete</h3>
        <a href="~/Employees/DeleteConfirm/@Model.Id" class="btn_Delete">
            <i class="fa fa-trash" aria-hidden="true"></i>
        </a>
    </div>


</div>


